<%# POST boxes/5/pokemons %>

<div class="row justify-content-center">
  <div class="col-sm-4">
    <h1>New pokemon for <%= @box.name %></h1>
    <%= simple_form_for [@box, @pokemon] do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
